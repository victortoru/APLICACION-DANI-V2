<?xml version="1.0" encoding="utf-8"?>
<!-- item_noticia.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tituloNoticia"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="TituloNoticia"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/imagennoticias"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNoticia"
        android:layout_width="214dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:text="Texto-Noticia"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toEndOf="@+id/imagennoticias"
        app:layout_constraintTop_toBottomOf="@+id/tituloNoticia"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imagennoticias"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
